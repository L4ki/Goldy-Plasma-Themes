# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#e1e1e1\nbase_color:#242424"
# Foreground/background
gtk-color-scheme = "fg_color:#e1e1e1\nbg_color:#1d1d1d"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#e1e1e1\nselected_bg_color:#af905e"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#2d2d2d\ninsensitive_bg_color:#242424"
# Menus
gtk-color-scheme = "menu_color:#262626"
# Links
gtk-color-scheme = "link_color:#af905e\nvisited_link_color:#af905e"
# Treeview headers
gtk-color-scheme = "column_header_color:#383838\nhover_column_header_color:#565656"
# Window decoration
gtk-color-scheme = "window_color:#242424"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#e1e1e1\ntooltip_bg_color:#242424"

# Set GTK settings
gtk-auto-mnemonics = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "hacks-dark.rc"

# App stylings
include "apps/chrome.rc"
include "apps/gimp.rc"
include "apps/libreoffice.rc"
include "apps/terminal.rc"
include "apps/thunar.rc"
include "apps/xfce.rc"
